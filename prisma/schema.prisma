generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  firstname        String
  lastname         String
  contactNo        String   @unique @db.VarChar(10)
  email            String   @unique
  password         String
  profilePhotoPath String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
